<div class="h-screen w-full bg-cover absolute brightness-75" style="background-image: url(<%= image_path('splash.jpg') %>);"></div>
<div class="h-screen w-full">
  <div class='h-full flex flex-row justify-between items-center pl-5'>
    <div class="z-10 p-5 text-white font-light drop-shadow-2xl">
      <h2 class="text-xl font-thin mb-1"><%= render_markdown(t('landings.index.hero.heading')) %></h2>
      <h1 class="text-4xl ml-3 font-trajan text-primary-dark">YELLOW BRICK STAYS</h1>
      <h2 class="font-thin text-right"><%= render_markdown(t('landings.index.hero.sub_heading')) %></h2>

      <ul class="space-y-2 mt-10 mb-10">
        <% t('landings.index.benefits').each do |title, benefit| %>
          <li class="flex space-x-3">
            <%= icon(:check, class: 'h-6 text-secondary') %>
            <span><%= title.to_s.humanize %> - <%= benefit[:brief] %></span>
          </li>
        <% end %>
      </ul>

      <%= link_to 'Get in Touch', new_enquiry_path, class: 'py-2 px-4 text-white font-medium hover:font-semibold bg-primary-dark hover:bg-primary' %>
    </div>
  </div>
</div>

<div class="flex flex-col items-center justify-center">
  <h3 class="text-3xl m-10 text-center">Why Yellow Brick Stays?</h3>

  <div class="flex flex-col md:flex-row">
    <% t('landings.index.benefits').each do |title, benefit| %>
      <div class="w-full md:w-1/3 flex flex-col items-center justify-center mb-20 p-5">
        <div class="overflow-hidden shadow-lg min-h-128">
          <%= image_tag benefit[:image] %>

          <div class="px-6 py-4 text-center">
            <h4 class="text-2xl mb-2"><%= title.to_s.humanize %></h4>
            <div class="min-h-40"><%= benefit[:copy] %></div>
            <%= link_to 'Get in Touch', new_enquiry_path, class: 'py-2 px-4 text-white font-medium hover:font-semibold bg-primary-dark hover:bg-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% t('landings.index.markets').each_with_index do |(title, market), index| %>
  <div class="h-[90vh] mt-2 mb-2 last:mb-0 relative">
    <div class="h-full w-full bg-cover absolute brightness-50" style="background-image: url(<%= image_path(market[:image]) %>);"></div>
    <div class="h-full w-full">
      <div class='h-full flex flex-row items-center pl-5 <%= index.even? ? 'justify-end' : 'justify-between' %>'>
        <div class="md:w-1/2 z-10 p-5 text-white font-light drop-shadow-xl">
          <h3 class="text-4xl mb-10 font-trajan text-primary-dark"><%= title.to_s.humanize %></h3>
          <div class="mb-10"><%= render_markdown(market[:copy]) %></div>
          <%= link_to 'Get in Touch', new_enquiry_path, class: 'py-2 px-4 text-white font-medium hover:font-semibold bg-primary-dark hover:bg-primary mt-10' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
